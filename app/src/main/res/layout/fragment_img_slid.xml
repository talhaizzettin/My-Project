<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".model.ImgSlidFrag">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/todo"
            android:scaleType="fitEnd"
            android:src="@drawable/buttomcloudl"
            tools:ignore="ImageContrastCheck" />

        <ImageView
            android:id="@+id/backimgbut"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/todo"
            android:paddingStart="0dp"
            android:paddingEnd="30dp"
            android:src="@drawable/monofigatiol"
            tools:visibility="invisible" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/imgslider"
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/nextimgbut"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/todo"
            android:paddingStart="30dp"
            android:paddingEnd="0dp"
            android:src="@drawable/monofigatior" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/todo"
            android:scaleType="fitEnd"
            android:src="@drawable/buttomcloudr"
            tools:ignore="ImageContrastCheck" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>