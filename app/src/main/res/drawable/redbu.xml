            <corners android:radius="18dip" />
            <stroke android:width="2dip" android:color="@color/redda" />
            <gradient android:angle="-90" android:startColor="@color/red" android:endColor="@color/red" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle"  >
